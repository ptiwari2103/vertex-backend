<%- contentFor('body') %>

<div class="row g-4">
    <!-- Stats Cards -->
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Total Members</h6>
                <h3 class="card-title mb-0"><%= stats.totalMembers %></h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Pending Approvals</h6>
                <h3 class="card-title mb-0"><%= stats.pendingApprovals %></h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Active Loans</h6>
                <h3 class="card-title mb-0"><%= stats.activeLoans %></h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Total Accounts</h6>
                <h3 class="card-title mb-0"><%= stats.totalAccounts %></h3>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Action</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% activities.forEach(function(activity) { %>
                            <tr>
                                <td><%= activity.userId %></td>
                                <td><%= activity.action %></td>
                                <td><%= activity.date %></td>
                                <td>
                                    <span class="badge bg-<%= activity.status === 'Completed' ? 'success' : 'warning' %>">
                                        <%= activity.status %>
                                    </span>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="/admin/users/new" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-plus me-2"></i> Add New Member
                    </a>
                    <a href="/admin/loans/new" class="list-group-item list-group-item-action">
                        <i class="bi bi-cash-coin me-2"></i> Create Loan Type
                    </a>
                    <a href="/admin/users/pending" class="list-group-item list-group-item-action">
                        <i class="bi bi-clock-history me-2"></i> Review Pending Applications
                    </a>
                    <a href="/admin/reports" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-text me-2"></i> Generate Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
