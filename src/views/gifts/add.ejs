<%- contentFor('title') %>Add New Gift - Vertex Admin

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<%- contentFor('style') %>

<%- contentFor('body') %>
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Add New Gift</h2>
            <p>Create a new gift that members can receive.</p>
        </div>
        <div class="col-auto">
            <a href="/gifts/list" class="btn btn-secondary">
                <i class='bx bx-arrow-back'></i> Back to All Gifts
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form action="/gifts/create" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Gift Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="quantity" class="form-label">Available Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" min="0" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        
                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary w-auto">
                                <i class='bx bx-save'></i> Save Gift
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Gift Preview</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class='bx bxs-gift' style="font-size: 5rem;"></i>
                    </div>
                    <h5 id="namePreview">Gift Name</h5>
                    <p id="descriptionPreview" class="text-muted">Gift description will appear here</p>
                </div>
            </div>
        </div>
    </div>
</div>



