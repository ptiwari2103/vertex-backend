<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- contentFor('title') %>Login - Vertex Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- contentFor('style') %>
    <style>
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1rem;
        }
        .login-form {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-header h4 {
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        .login-header p {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .form-control {
            border-radius: 5px;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .form-control:focus {
            border-color: #2c3e50;
            box-shadow: 0 0 0 0.2rem rgba(44, 62, 80, 0.25);
        }
        .btn-primary {
            background-color: #2c3e50;
            border-color: #2c3e50;
            padding: 0.75rem 1rem;
            font-weight: 500;
            transition: all 0.15s ease-in-out;
        }
        .btn-primary:hover {
            background-color: #1e2b37;
            border-color: #1e2b37;
            transform: translateY(-1px);
        }
        .alert {
            border-radius: 5px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        .form-text {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <%- contentFor('body') %>
    <div class="login-container">
        <div class="login-form">
            <div class="login-header">
                <h4>Admin Login</h4>
                <p>Please enter your credentials</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <form action="/auth/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="user_id" class="form-label">User ID</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="user_id" 
                        name="user_id" 
                        required 
                        pattern="[0-9]{6}"
                        title="Please enter a valid 6-digit ID"
                        placeholder="Enter your 6-digit ID"
                        autocomplete="off"
                    >
                    <div class="form-text">Enter your 6-digit admin ID (format: SSDDXY)</div>
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        class="form-control" 
                        id="password" 
                        name="password" 
                        required
                        minlength="8"
                        maxlength="50"
                        placeholder="Enter your password"
                        autocomplete="current-password"
                    >
                    <div class="form-text">Password must be 8-50 characters with uppercase, lowercase, number, and special character</div>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bx bx-log-in me-2"></i>Login
                </button>
            </form>
        </div>
    </div>

    <%- contentFor('script') %>
    <script>
    // Form validation
    (function () {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })

        // Add custom validation for User ID
        const userIdInput = document.getElementById('user_id')
        userIdInput.addEventListener('input', function() {
            const value = this.value
            if (!/^\d{6}$/.test(value)) {
                this.setCustomValidity('Please enter a valid 6-digit ID')
            } else {
                this.setCustomValidity('')
            }
        })

        // Add custom validation for Password
        const passwordInput = document.getElementById('password')
        passwordInput.addEventListener('input', function() {
            const value = this.value
            const hasUpperCase = /[A-Z]/.test(value)
            const hasLowerCase = /[a-z]/.test(value)
            const hasNumbers = /\d/.test(value)
            const hasSpecialChar = /[!@#$%^&*(),.?":{}|<>]/.test(value)
            const isValidLength = value.length >= 8 && value.length <= 50

            if (!isValidLength || !hasUpperCase || !hasLowerCase || !hasNumbers || !hasSpecialChar) {
                this.setCustomValidity('Password must meet all requirements')
            } else {
                this.setCustomValidity('')
            }
        })
    })()
    </script>
</body>
</html>
