<style>
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 250px;
        background: #343a40;
        padding: 20px;
        color: white;
        z-index: 1000;
    }
    .nav-link {
        color: rgba(255,255,255,.75);
        padding: 10px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        transition: color 0.2s ease;
    }
    .nav-link:hover, .nav-link.active {
        color: white;
    }
    .nav-link i {
        font-size: 20px;
    }
    .user-info {
        margin-top: 20px;
        padding: 15px;
        border-top: 1px solid rgba(255,255,255,.1);
    }
    .user-info p {
        margin: 0;
        font-size: 14px;
        color: rgba(255,255,255,.75);
    }
    .logout-btn {
        margin-top: 10px;
        width: 100%;
        background-color: #dc3545;
        border: none;
        padding: 8px;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }
    .logout-btn:hover {
        background-color: #bb2d3b;
    }
    .brand-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: white;
        text-decoration: none;
    }
    .brand-title:hover {
        color: white;
        text-decoration: none;
    }
</style>

<div class="sidebar">
    <a href="/dashboard" class="brand-title">Vertex Admin</a>
    
    <nav class="nav flex-column">
        <a class="nav-link <%= locals.currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
            <i class='bx bxs-dashboard'></i> Dashboard
        </a>
        <a class="nav-link <%= locals.currentPage === 'members' ? 'active' : '' %>" href="/members">
            <i class='bx bxs-user'></i> Members
        </a>
        <a class="nav-link <%= locals.currentPage === 'settings' ? 'active' : '' %>" href="/settings">
            <i class='bx bxs-cog'></i> Settings
        </a>
    </nav>

    <div class="user-info">
        <p>Welcome, <%= user.name %></p>
        <p class="text-muted mb-2">ID: <%= user.user_id %></p>
        <form action="/auth/logout" method="POST">
            <button type="submit" class="logout-btn">
                <i class='bx bx-log-out'></i> Logout
            </button>
        </form>
    </div>
</div>
