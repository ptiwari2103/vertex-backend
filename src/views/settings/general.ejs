<%- contentFor('title') %>General Settings - Vertex Admin


<%- contentFor('style') %>

<%- contentFor('body') %>
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>General Settings</h2>
            <p>Manage general settings for the application.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <% if (locals.success && success.length > 0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <% if (locals.error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <form action="/settings/general" method="POST" id="settingsForm" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="compulsory_deposit" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Compulsory Deposit (C D):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="compulsory_deposit" name="compulsory_deposit" value="<%= settings ? settings.compulsory_deposit : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="recurring_deposit" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Recurring Deposit (R D):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="recurring_deposit" name="recurring_deposit" value="<%= settings ? settings.recurring_deposit : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="fixed_deposit" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Fixed Deposit (F D):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="fixed_deposit" name="fixed_deposit" value="<%= settings ? settings.fixed_deposit : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="loan_against_gold" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Loan Against Gold (L G L):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="loan_against_gold" name="loan_against_gold" value="<%= settings ? settings.loan_against_gold : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="loan_against_mortgage_property" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Loan Against Mortgage Property (L A M P):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="loan_against_mortgage_property" name="loan_against_mortgage_property" value="<%= settings ? settings.loan_against_mortgage_property : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="loan_for_livelihood" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Loan for Livelihood (L L):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="loan_for_livelihood" name="loan_for_livelihood" value="<%= settings ? settings.loan_for_livelihood : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="loan_for_women_livelihood" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Loan for Women Livelihood (L W L):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="loan_for_women_livelihood" name="loan_for_women_livelihood" value="<%= settings ? settings.loan_for_women_livelihood : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="emergency_loan" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Emergency Loan (E L):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="emergency_loan" name="emergency_loan" value="<%= settings ? settings.emergency_loan : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="credit_card_loan" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Credit Card Loan (C C L):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="credit_card_loan" name="credit_card_loan" value="<%= settings ? settings.credit_card_loan : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>


                        <div class="mb-4">
                            <div class="d-flex align-items-center">
                                <label for="shared_money" class="me-3 mb-0 fw-bold" style="min-width: 310px; white-space: nowrap;">Shared Money (S M):</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="shared_money" name="shared_money" value="<%= settings ? settings.shared_money : 6 %>" min="0" max="100" step="0.01" required>
                                    <div class="invalid-feedback">Please enter a valid percentage (0-100).</div>
                                    <span class="input-group-text bg-light fw-bold">% per year</span>
                                </div>
                            </div>
                        </div>



                        <div class="d-flex">
                            <button type="submit" class="btn btn-primary w-auto">
                                <i class='bx bx-save'></i> Save Settings
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- contentFor('script') %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const form = document.getElementById('settingsForm');
        
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            
            form.classList.add('was-validated');
        });
        
        // Add input validation for all number fields
        const numberInputs = document.querySelectorAll('input[type="number"]');
        numberInputs.forEach(input => {
            input.addEventListener('input', function() {
                const value = parseFloat(this.value);
                if (isNaN(value) || value < 0 || value > 100) {
                    this.setCustomValidity('Please enter a valid percentage between 0 and 100');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    });
</script>